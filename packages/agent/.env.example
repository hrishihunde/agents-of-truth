# ================================
# Agent Configuration
# ================================

# Server port
PORT=3001

# ================================
# Ethereum Configuration
# ================================

# RPC URL for ENS resolution (mainnet recommended for production ENS names)
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Alternative: Use public RPC (rate limited)
# ETH_RPC_URL=https://eth.llamarpc.com

# ================================
# ENS Configuration
# ================================

# Default ENS name to use if not provided in request
DEFAULT_ENS_NAME=payments-agent.eth

# ================================
# ZK Proof Configuration
# ================================

# Path to compiled circuit files (relative to agent package)
ZK_CIRCUIT_WASM=./src/zk/circuit_js/circuit.wasm
ZK_CIRCUIT_ZKEY=./src/zk/circuit_final.zkey
ZK_VERIFICATION_KEY=./src/zk/verification_key.json

# ================================
# Logging
# ================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

